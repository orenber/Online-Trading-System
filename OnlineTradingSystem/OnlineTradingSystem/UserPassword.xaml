<Window x:Class="OnlineTradingSystem.UserPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" ResizeMode="NoResize"
        Title="UserPassword" Height="126" Width="326"
        WindowStartupLocation="CenterScreen"
        Topmost="True" Closed="Window_Closed">
    <Grid Height="88" Width="296">
      
            <PasswordBox Height="23" HorizontalAlignment="Left" Margin="114,50,0,0" Name="passwordBox" VerticalAlignment="Top" Width="120" />
        <Label Content="User Name:" Height="28" Margin="36,16,172,44" Name="labelUsername" />
        <Label Content="Password:" HorizontalAlignment="Left" Margin="42,45,0,15" Name="labelpassword" Width="67" />
            <TextBox Height="23" HorizontalAlignment="Left" Margin="114,21,0,0" Name="usernameBox" VerticalAlignment="Top" Width="120" GotFocus="usernameBox_GotFocus" />
        <Button Content="Log In" Height="23" HorizontalAlignment="Left" Margin="245,50,0,0" Name="Login" VerticalAlignment="Top" Width="39" Click="Login_Click" />
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="22,72,0,0" Name="textWrongValidate" Text="" VerticalAlignment="Top" Width="80" Foreground="#FFD30000" />
    </Grid>
</Window>

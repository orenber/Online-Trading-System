        WindowStartupLocation="CenterScreen"
        Title="Window1" Height="235.665" Width="366.67" MouseDown="Window_MouseDown"   
        
        >


    <Window.Resources >

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>







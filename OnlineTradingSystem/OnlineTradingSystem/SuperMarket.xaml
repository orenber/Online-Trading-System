                    <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5" x:Name="MySolidColorBrush">
                        <GradientStop Color="Black" Offset="0" />
                        <GradientStop Color="#FFF45151" Offset="1" />

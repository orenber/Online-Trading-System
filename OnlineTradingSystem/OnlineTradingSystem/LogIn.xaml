<Window x:Class="OnlineTradingSystem.UserPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" ResizeMode="NoResize"
        Title="Log In" Height="126" Width="326"
        WindowStartupLocation="CenterScreen"
        Topmost="True" Closed="Window_Closed">
    <Grid Height="88" Width="296">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="77*"/>
            <ColumnDefinition Width="219*"/>
        </Grid.ColumnDefinitions>


        <Label Content="Email:" Height="28" Margin="36,16,172,44" Name="labelEmail" Grid.ColumnSpan="2" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="37,21,0,0" Name="email_editBox" VerticalAlignment="Top" Width="120" GotFocus="usernameBox_GotFocus" Grid.Column="1" />

        <Label Content="Password:" HorizontalAlignment="Left" Margin="36,39,0,21" Name="labelpassword" Width="67" Grid.ColumnSpan="2" />
        <PasswordBox Height="23" HorizontalAlignment="Left" Margin="37,50,0,0" Name="passwordBox" VerticalAlignment="Top" Width="120" Grid.Column="1" />

        <Button Content="Log In" Height="23" HorizontalAlignment="Left" Margin="168,50,0,0" Name="Login" VerticalAlignment="Top" Width="39" Click="Login_Click" Grid.Column="1" />
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="22,72,0,0" Name="textWrongValidate" Text="" VerticalAlignment="Top" Width="80" Foreground="#FFD30000" />

    </Grid>
</Window>
